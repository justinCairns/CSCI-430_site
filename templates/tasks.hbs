<!doctype html>
<html> 
<head>
    {{>head}}
    <script defer src="/js/tasks.js"></script>
</head>
<body>
    <div class="page-container">
        {{>create_task_modal}}
        {{>modify_task_modal}}
        {{>delete_task_modal}}
        {{>navbar}}
        <div class="content-wrap">
            <h1 id="taskNumber" class="text-center">Tasks</h1>
            <div class="text-center">
                <button type="button" id="un-filter-btn" class="btn btn-info">Uncompleted Tasks</button>
                <button type="button" id="filter-btn" class="btn btn-info">All Tasks</button>
            </div>
            <br>
            <div id="contentArea"></div>
            <div class="text-center">
                <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#createTaskModal">Create New Task</button>
                <button type="button" id="next-btn" class="btn btn-success">Next</button>
            </div>
        </div>
        {{>footer}}
        {{>bootstrap_scripts}}
    </div>
</body>